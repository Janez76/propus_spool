---
import Layout from '../../layouts/Layout.astro'
---

<Layout title="FilaMan - Admin">
  <h1 class="text-3xl font-bold mb-6" data-i18n="admin.title">Admin</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <a href="/admin/users" class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
      <h2 class="text-xl font-semibold mb-2" data-i18n="admin.users">Users</h2>
      <p class="text-gray-500 dark:text-gray-400 text-sm" data-i18n="admin.usersDesc">Manage user accounts</p>
    </a>
    <a href="/admin/roles" class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
      <h2 class="text-xl font-semibold mb-2" data-i18n="admin.rolesPerms">Roles & Permissions</h2>
      <p class="text-gray-500 dark:text-gray-400 text-sm" data-i18n="admin.rolesPermsDesc">Manage roles and permissions</p>
    </a>
    <a href="/admin/devices" class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
      <h2 class="text-xl font-semibold mb-2" data-i18n="admin.devices">Devices</h2>
      <p class="text-gray-500 dark:text-gray-400 text-sm" data-i18n="admin.devicesDesc">Manage device tokens</p>
    </a>
    <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-6 opacity-50">
      <h2 class="text-xl font-semibold mb-2" data-i18n="admin.system">System</h2>
      <p class="text-gray-500 dark:text-gray-400 text-sm" data-i18n="admin.systemDesc">Coming soon</p>
    </div>
  </div>
</Layout>
